<Window x:Class="TechReportToDB.Views.Windows.PersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechReportToDB.Views.Windows"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        Title="Крточка сотрудника" Height="250" Width="450">
    <Window.Resources>
        <Style TargetType="TextBlock" >
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    <StackPanel Margin="5">
        <TextBlock HorizontalAlignment="Center"
                   Text="Карточка сотрудника"/>
        <StackPanel Orientation="Horizontal"
                    Margin="0,2"
                    HorizontalAlignment="Center">
            <TextBlock Text="ФИО:"/>
            <TextBlock Text="{Binding Person.Name}"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Margin="0,2"
            HorizontalAlignment="Center">
            <TextBlock Text="Должность:"/>
            <TextBlock Text="{Binding Person.Position}"/>

        </StackPanel>
        
        <StackPanel Orientation="Horizontal"
            Margin="0,2"
            HorizontalAlignment="Center">
            <TextBlock Text="Дата рождения:"/>
            <TextBlock Text="{Binding Person.DateOfBirt}"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal"
     Margin="0,2"
     HorizontalAlignment="Center">
            <TextBlock Text="Дата трудоустройства:"/>
            <TextBlock Text="{Binding Person.DateOfJob}"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal"
            Margin="0,2"
            HorizontalAlignment="Center">
            <TextBlock Text="Телефон:"/>
            <TextBlock>
        <Hyperlink Command="{Binding OpenWhatsAppCommand}"
                   CommandParameter="{Binding Person.Phone}">
            <Run Text="{Binding Person.Phone}"/>
        </Hyperlink>
            </TextBlock>
        </StackPanel>

    </StackPanel>
</Window>
