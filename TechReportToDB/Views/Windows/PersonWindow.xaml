<Window x:Class="TechReportToDB.Views.Windows.PersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechReportToDB.Views.Windows"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        Title="Карточка сотрудника" Height="250" Width="450">
    <Window.Resources>
        <Style TargetType="TextBlock" >
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    <StackPanel Margin="5" HorizontalAlignment="Center">
        <TextBlock HorizontalAlignment="Center"
                   Text="Карточка сотрудника"/>
        <StackPanel Orientation="Horizontal"
                    Margin="0,2"
                    HorizontalAlignment="Center">
            <TextBlock Text="ФИО:"/>
            <TextBlock Text="{Binding Person.Name}"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Margin="0,2"
            HorizontalAlignment="Center">
            <TextBlock Text="Должность:"/>
            <TextBlock Text="{Binding Person.Position}"/>

        </StackPanel>

        <StackPanel Orientation="Horizontal"
            Margin="0,2"
            HorizontalAlignment="Center">
            <TextBlock Text="Дата рождения:"/>
            <TextBlock Text="{Binding Person.DateOfBirt}"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal"
     Margin="0,2"
     HorizontalAlignment="Center">
            <TextBlock Text="Дата трудоустройства:"/>
            <TextBlock Text="{Binding Person.DateOfJob}"/>

        </StackPanel>


        <TextBlock HorizontalAlignment="Center">
            <Hyperlink Command="{Binding OpenPhoneCommand}"
                   CommandParameter="{Binding Person.Phone}"
                   TextDecorations="{x:Null}"
                   Foreground="#3F54BB">  
                <StackPanel Orientation="Horizontal" 
                            Margin="0,2">
                <TextBlock Text="Телефон: "/>
                <TextBlock Text="{Binding Person.Phone}"/>  
                </StackPanel>
            </Hyperlink>
        </TextBlock>


        <TextBlock HorizontalAlignment="Center">
            <Hyperlink Command="{Binding OpenWhatsAppCommand}"
                   CommandParameter="{Binding Person.Phone}"
                   TextDecorations="{x:Null}"
                   Foreground="#1B8755">
            <TextBlock Text="WhatsApp"/> 
            </Hyperlink>
        </TextBlock>

        <TextBlock HorizontalAlignment="Center">
            <Hyperlink Command="{Binding OpenTelegramCommand}"
                       CommandParameter="{Binding Person.Phone}"
                       TextDecorations="{x:Null}"
                       Foreground="#1D94CF">
                <TextBlock Text="Telegram"/> 
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</Window>
