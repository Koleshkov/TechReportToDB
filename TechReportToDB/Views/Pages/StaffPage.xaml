<UserControl x:Class="TechReportToDB.Views.Pages.StaffPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TechReportToDB.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GridSplitter Grid.Row="1"
                          Grid.Column="0" 
                          Grid.ColumnSpan="11" 
                          Height="5"
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Stretch"
                          IsEnabled="False"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="5"
                            Content="Назад"
                            Command="{Binding DailyReportToDbPageCommand}"/>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="5"
                            Content="Выгрузить"
                            Command="{Binding ExportCommand}"/>

                    <TextBlock Text="Поиск:"
                               Margin="5"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBox Margin="5" 
                         Grid.Column="1"
                         VerticalContentAlignment="Center"
                         HorizontalAlignment="Stretch"
                         FontSize="12"
                         Text="{Binding FilterPerson, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>

            <DataGrid Grid.Row="2" 
                      ItemsSource="{Binding FiltredPersonList}" 
                      AutoGenerateColumns="False"
                      IsReadOnly="False" 
                      CanUserAddRows="False" 
                    CanUserDeleteRows="False"
                     SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ПП" Binding="{Binding Job.FieldTeam}" />
                    <DataGridTextColumn Header="Месторождение" Binding="{Binding Job.Field}" />
                    <DataGridTextColumn Header="Куст" Binding="{Binding Job.Pad}" />
                    <DataGridTextColumn Header="Скважина" Binding="{Binding Job.Well}" />
                    <DataGridTextColumn Header="Тип скв." Binding="{Binding Job.Type}" />
                    <DataGridTemplateColumn Header="Тел. ПП">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Hyperlink Command="{Binding DataContext.OpenPhoneCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                           CommandParameter="{Binding Job.Phone}">
                                        <TextBlock Text="{Binding Job.Phone}" />
                                    </Hyperlink>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="ФИО" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Должность" Binding="{Binding Position}" />
                    <DataGridTextColumn Header="Дата устройства" Binding="{Binding DateOfJob}" />
                    <DataGridTemplateColumn Header="Тел. личный">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Hyperlink Command="{Binding DataContext.OpenPhoneCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               CommandParameter="{Binding Phone}">
                                               <TextBlock Text="{Binding Phone}" />
                                     </Hyperlink>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="WhatsApp">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                        <Hyperlink Command="{Binding DataContext.OpenWhatsAppCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                   CommandParameter="{Binding Phone}">
                            <TextBlock Text="WhatsApp" />
                        </Hyperlink>
                    </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Telegram">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Hyperlink Command="{Binding DataContext.OpenTelegramCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               CommandParameter="{Binding Phone}">
                                          <TextBlock Text="Telegram" />
                                    </Hyperlink>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Grid>
</UserControl>
